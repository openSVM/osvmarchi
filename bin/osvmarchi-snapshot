#!/bin/bash

COMMAND="$1"
OSVMARCHI_PATH=${OSVMARCHI_PATH:-$HOME/.local/share/osvmarchi}

if [[ -z $COMMAND ]]; then
  echo "Usage: osvmarchi-snapshot <create|restore>" >&2
  exit 1
fi

if ! command -v snapper &>/dev/null; then
  exit 127 # osvmarchi-update can use this to just ignore if snapper is not available
fi

case "$COMMAND" in
create)
  DESC="$(osvmarchi-version)"

  echo -e "\e[32mCreate system snapshot\e[0m"
  
  # Get existing snapper config names from CSV output
  mapfile -t CONFIGS < <(sudo snapper --csvout list-configs | awk -F, 'NR>1 {print $1}')

  for config in "${CONFIGS[@]}"; do
    sudo snapper -c "$config" create -c number -d "$DESC"
  done
  echo
  ;;
restore)
  sudo limine-snapper-restore
  ;;
esac
